<h2>Trips#New</h2>

<%= form_for [ @user, @trip ] do |f| %>

      <!-- How to set up the raido button so it greys out the start address if "use current location" is checked -->

    <%= label_tag(:current_address_true, "Use Current Location") %> 
    <%= radio_button_tag(:current_address, true) %>

    <%= f.label :start_address %>
    <%= f.text_field :start_address %>

    <%= f.label :end_address %>
    <%= f.text_field :end_address %>
 
    <%= f.submit %> 
<% end %>

<%= link_to "Cancel", root_path, class: 'button' %>